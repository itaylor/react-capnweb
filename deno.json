{
  "name": "@itaylor/react-capnweb",
  "version": "0.0.3",
  "description": "React hooks and components for capnweb - A JavaScript-native RPC system, supporting multiple transport protocols",
  "exports": {
    ".": "./mod.tsx",
    "./websocket": "./websocket.tsx",
    "./http-batch": "./http-batch.tsx",
    "./message-port": "./message-port.tsx",
    "./custom-transport": "./custom-transport.tsx",
    "./core": "./core.tsx"
  },
  "publish": {
    "include": [
      "core.tsx",
      "websocket.tsx",
      "http-batch.tsx",
      "message-port.tsx",
      "custom-transport.tsx",
      "mod.tsx",
      "README.md",
      "LICENSE"
    ]
  },
  "imports": {
    "capnweb": "npm:capnweb@0.4.0",
    "@dnt/mod": "jsr:@deno/dnt@0.42.3",
    "@std/path": "https://deno.land/std@0.208.0/path/mod.ts",
    "@std/assert": "https://deno.land/std@0.208.0/assert/mod.ts",
    "@astral/astral": "jsr:@astral/astral@0.4.5",
    "@types/react": "npm:@types/react@^19.2.7",
    "@types/react-dom": "npm:@types/react-dom@^19.2.3",
    "react": "npm:react@^19.2.1",
    "react-dom": "npm:react-dom@^19.2.1"
  },
  "tasks": {
    "test": "deno task bundle:fixtures && deno task test:browser",
    "test:serve": "deno run --allow-net --allow-read scripts/serve-test-fixtures.ts",
    "test:browser": "deno run --allow-all scripts/start-server-and-test.ts \"deno task test:serve\" \"deno test --allow-net --allow-read --allow-env --allow-run --allow-write react-capnweb.browser.test.ts\"",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check && deno task lint && deno task fmt --check",
    "build:npm": "deno run -A scripts/build_npm.ts",
    "bundle:fixtures": "deno bundle --sourcemap=inline --outdir=test-fixtures/dist test-fixtures/*.ts*"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "no-window"]
    }
  },
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "compilerOptions": {
    "lib": ["dom", "esnext", "dom.iterable", "esnext.disposable"],
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react@^19.2.1",
    "jsxImportSourceTypes": "@types/react"
  }
}
